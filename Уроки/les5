import easygui


class human:
    def __init__(self, a, b, c, d, e, f):
        self.name = a
        self.surname = b
        self.age = c
        self.height = d
        self.colorhair = e
        self.coloreye = f
    def getinfo(self):
        easygui.msgbox(f'Имя: {self.name}\n'
                       f'Фамилия: {self.surname}')

un = easygui.enterbox("Имя:")
user = human(un, 1, 1, 1, 1, 1)
user.getinfo()